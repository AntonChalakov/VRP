		#l.addChild(VR.boxes)
		for x in [0,2,4,6,8]:
			box = VR.Geometry('box')
			box.setPrimitive('Box 1 1 1 1 1 1')
			box.setWorldFrom([x,20,0])
			VR.boxes.addChild(box)
	
	i = caster.castRay(VR.boxes, [0,0,-1])
	if i.getIntersected(): 
