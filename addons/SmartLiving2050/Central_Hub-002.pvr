      <core>
	import VR
	cam = VR.find('Default.1')
	kb = VR.find('keyboard')
	
	isW = kb.getKeyState(ord('w')) &gt; 0
	isA = kb.getKeyState(ord('a')) &gt; 0
	isS = kb.getKeyState(ord('s')) &gt; 0
	isD = kb.getKeyState(ord('d')) &gt; 0
	
	#print isW, isA, isS, isD
	
	cdir = cam.getDir()
	
	S = 0
	D = 0
	if isW: S =  0.007
	if isS: S = -0.007
	if isA: D =  0.02
	if isD: D = -0.02
	
	d = [0,0,0]
	d[0] += S*cdir[0]
	#d[1] += S*cdir[1]
	d[2] += S*cdir[2]
	
	cam.translate(d)
	cam.rotate(0,1,0,D)
	
