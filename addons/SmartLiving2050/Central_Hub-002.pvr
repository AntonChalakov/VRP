	import VR
	
	def dot(u,v):
		return u[0]*v[0] + u[1]*v[1] + u[2]*v[2]
	def sub(u,v):
		return [u[0]-v[0] , u[1]-v[1] , u[2]-v[2]]
	
	l = VR.find('light.1')
	caster = VR.find('Default')
	Pcas = caster.getWorldFrom()
	
